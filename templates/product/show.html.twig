{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1 style="border:1px gray solid;margin-bottom:40px;">Product</h1>

    <div style="width:50%;margin:auto;">
        <div>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ product.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ product.name }}</td>
                    </tr>
                    <tr>
                        <th>Category</th>
                        <td>{{ product.category }}</td>
                    </tr>
                    <tr>
                        <th>Decription</th>
                        <td>{{ product.decription }}</td>
                    </tr>
                    <tr>
                        <th>Price</th>
                        <td>{{ product.price }}</td>
                    </tr>
                    <tr>
                        <th>Picture</th>
                        <td>{{ product.picture }}</td>
                    </tr>
                    <tr>
                        <th>Stock</th>
                        <td>{{ product.stock }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div style="display:flex; gap:10px;">
            <div>
                <a href="{{ path('app_product_index') }}" class="btn btn-info">Return</a>
            </div>
            <div>
                <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-info">Edition</a>
            </div>
            <div>
                {{ include('product/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
