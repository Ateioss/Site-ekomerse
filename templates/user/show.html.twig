{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1 style="border:1px gray solid;margin-bottom:40px;">User</h1>

    <div style="width:50%;margin:auto;">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td>{{ user.password }}</td>
                </tr>
            </tbody>
        </table>
        <div class="row">
            <div class="col">
                <a href="{{ path('app_user_index') }}" class="btn btn-info">Return</a>
            </div>
            <div class="col">
                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-info">Edition</a>
            </div>
            <div class="col">
                {{ include('user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
